<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/font/fontawesome-free-6.2.1-web/css/all.min.css">
</head>

<header>
    <a href="/" class="header_link-logo">
        <h1 class="header_logo">See</h1>
    </a>
	<div class="nav_menu">
		<i class="fa-solid fa-bars"></i>
	</div>
	<div class="header_nav_wrap">
		<nav class="header_nav" >
			<ul class="header_nav-list">
				<li class="header_nav-item">
					<a class="<%= path === '/introduce' ? 'navbar_active' : '' %>" href="/introduce">Giới thiệu</a>
				</li>


					<li class="header_nav-item">
						<a class="<%= path === '/iot/home' ? 'navbar_active' : '' %>" href="/admin/iot/home">Iot</a>
					</li>
					<li class="header_nav-item">
						<a class="<%= path === '/admin/station' ? 'navbar_active' : '' %>" href="/admin/station">Trạm</a>
					</li>
					<li class="header_nav-item">
						<a class="<%= path === '/admin/analysis' ? 'navbar_active' : '' %>" href="/admin/analysis">Phân tích</a>
					</li>
					<li class="header_nav-item">
						<a class="<%= path === '/admin/setting' ? 'navbar_active' : '' %>" href="/admin/setting">Cài đặt</a>
					</li>

			</ul>


			<% if(isAuthenticated) { %>
				<div class="div_btn_logout">
					<li class="header_auth-item">
						<form method="post" action="/logout">
							<button class="header_logout">Log out</button>
						</form>
					</li>
				</div>
			<% } else { %>
				<ul class="header_auth">
					<li class="header_auth-item">
						<a class="header_login" href="/login">Log in</a>
					</li>
					<li class="header_auth-item">
						<a class="header_signup" href="/signup">Sign up</a>
					</li>
				</ul>
			<% } %>
		</nav>
	</div>
    
	
	
	
</header>
<div class="dis_nav">
	<i class="up fa-solid fa-angles-up"></i>
	<i class="down fa-solid fa-angles-down"></i>
</div>

<!-- handle menu reponsive -->
<script>
	const nav_menu = document.querySelector('.nav_menu')
	const header_nav_wrap = document.querySelector('.header_nav_wrap')
	const header_nav = document.querySelector('.header_nav')
	
	nav_menu.onclick = () => {
		header_nav_wrap.style.display = 'flex'
		header_nav.style.animation = 'menuMove ease 0.3s';
	}
	
	header_nav_wrap.onclick = () => {
		header_nav_wrap.style.display = 'none'
		header_nav.style.animation= 'none';
	}
	
	header_nav.onclick = (event) => {
		event.stopPropagation();
	}
	

</script>

<script>
	const hd = document.querySelector('header')
	const arUp = document.querySelector('.dis_nav .up')
	const arDown = document.querySelector('.dis_nav .down')
	const btnDisNav = document.querySelector('.dis_nav')
	let isDisnav = true;
	console.log(btnDisNav)
	btnDisNav.onclick = () => {
		if(isDisnav) {
			hd.style.display = 'none';
			arUp.style.display = 'none';
			arDown.style.display = 'block';
			
		} else {
			hd.style.display = 'flex';
			arUp.style.display = 'block';
			arDown.style.display = 'none';
		}
		isDisnav = !isDisnav
	}
</script>
